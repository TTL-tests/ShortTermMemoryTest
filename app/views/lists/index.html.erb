<h1>Listing lists</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Training</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.filename %></td>
        <td><%= list.training %></td>
        <td><%= list.active %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New List', new_list_path %> | <%= link_to 'Short Term Memory Test Admin', rails_admin_path %> |
<% if admin_signed_in? %>
    <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>
<% end %>


